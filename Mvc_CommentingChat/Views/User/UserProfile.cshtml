@model Mvc_CommentingChat.Models.User

@{
    ViewBag.Title = "UserProfile";
}

<h2>UserProfile</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>


        <dt>
            @Html.DisplayFor(model => model.ImgUrl)
        </dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.ImgUrl))
            {
                <img src="@Url.Content(Model.ImgUrl)" alt="No Image" class="img-responsive img-thumbnail" />
            }

            <br /><br />

            @using (Html.BeginForm("UploadImage", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="file" name="Pitcher" class="col-md-2 form-control" />
                <input type="submit" value="Save Image" class="btn btn-default" />
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.createdTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.createdTime)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
